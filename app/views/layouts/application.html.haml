%html
  %head
    %meta{:charset => "utf-8"}/
    = csrf_meta_tags
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %title Juggler
    / Tell the browser to be responsive to screen width
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no", :name => "viewport"}/

    /
      TODO: Choose a skin from the css/skins
      folder instead of downloading all of them to reduce the load.
    = stylesheet_link_tag "application", media: "all"
    = javascript_include_tag "application"


    / HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    / WARNING: Respond.js doesn't work if you view the page via file://
    /[if lt IE 9]
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  / ADD THE CLASS layout-top-nav TO REMOVE THE SIDEBAR.
  %body.hold-transition.skin-blue.layout-top-nav
    .wrapper
      %header.main-header
        %nav.navbar.navbar-static-top
          .container
            .navbar-header
              %a.navbar-brand{:href => "/"}
                = image_tag "logo.png", {style:"height:28px"}

              %button.navbar-toggle.collapsed{"data-target" => "#navbar-collapse", "data-toggle" => "collapse", :type => "button"}
                %i.fa.fa-bars
            / Collect the nav links, forms, and other content for toggling
            #navbar-collapse.collapse.navbar-collapse.pull-left
              %ul.nav.navbar-nav
                - if current_user
                  %li.dropdown
                    %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                      Menu
                      %span.caret
                    %ul.dropdown-menu{:role => "menu"}
                      %li
                        = link_to 'Home Page', root_path
                      %li.divider
                      %li
                        = link_to 'Manage Users', users_path
                      %li
                        = link_to 'Manage Repositories', repositories_path
            / /.navbar-collapse
            / Navbar Right Menu
            .navbar-custom-menu
              %ul.nav.navbar-nav
                / User Account Menu
                - if current_user
                  %li.dropdown.user.user-menu
                    / Menu Toggle Button
                    %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                      / hidden-xs hides the username on small devices so only the image appears.
                      %span.hidden-xs= current_user.name
                    %ul.dropdown-menu
                      / The user image in the menu
                      %li.user-header
                        %p
                          = current_user.name
                          %br
                          = current_user.email
                          %small
                            = "Member since #{current_user.created_at.to_date}"
                      / Menu Footer
                      %li.user-footer
                        .pull-right
                          = link_to 'Sign out', destroy_user_session_path, method: :delete, class: "btn btn-default btn-flat"
            / /.navbar-custom-menu
          / /.container-fluid
      / Full Width Column

      / TODO: replace dirty walkaround:
      .content-wrapper{style: "#{current_user ? '': 'background-color: #3498db'}"}
        .container
          - if flash[:notice]
            .alert.alert-success.alert-dismissible{style: "margin-top:10px"}
              %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} ×
              %h4
                %i.icon.fa.fa-check
                Info:
              = flash[:notice]
          - if flash[:alert]
            .alert.alert-danger.alert-dismissible{style: "margin-top:10px"}
              %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} ×
              %h4
                %i.icon.fa.fa-ban
                Alert!
              = flash[:alert]

          = yield
        / /.container
      / /.content-wrapper
      %footer.main-footer
        .container
          %strong
            Made with
            %i.fa.fa-heart
            by
            %a{:href => "http://visuality.pl", :target => "_blank"} visuality.pl
        / /.container
    / ./wrapper
    / jQuery 2.1.4
