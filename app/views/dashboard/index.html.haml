%section.content-header
  %h1
    Dashboard
    %small beta version

%section.content
  - @pull_requests.each do |pull_request|
    .box.box-default
      .box-header.with-border
        %h3.box-title
          = link_to pull_request.title, pull_request_path(pull_request)
          %small
            = link_to pull_request.repository.name, pull_request.repository.html_url, target: '_blank'

      .box-body
        - if pull_request.reviewer.present?
          = pull_request.reviewer.name
        = pull_request.opened_at
        = pull_request.state
